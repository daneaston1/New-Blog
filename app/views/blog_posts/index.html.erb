<div class="container">
  <div class="d-flex justify-content-between align-items-center">
  <h1 class="mb-0">My Blog</h1>
   <%= button_to "New Blog Post", new_blog_post_path, method: :get, class: "btn btn-primary" %>
   </div>
   <br>
  <% @blog_posts.each do |blog_post| %>
    <div class="card mb-4">
      <div class="card-body">
        <h4 class="card-title"><%= link_to blog_post.title, blog_post %></h4>
        <p class="card-text"><%= truncate(blog_post.body, length: 100)%></p>
      </div>
    </div>
  <% end %>
</div>
